#include <iostream>
#include <cmath>
using namespace std;
int main()
{
	float p = -1, pmax = -1;
	int i, K=0, N, M, min=INT_MAX, max=INT_MIN, c = 0, j, j1, i1, c1=0, s = 0; 
	float m;
	cin >> N;
	M=N;
	int *A[N];
	int *B=new int[M];
	for	(i=0; i<M; i++) A[i] = new int[N];
	cout << "Vvedite elementy matricy: ";
	for (i = 0; i < M; i++){
		for (j = 0; j < N; j++)
			cin >> A[i][j];
	}
	
	i=0;	
		for (j = N-1; j >=0; j--){
			c=0;
			s++;
			c1=s;
			i1=i;
			j1=j;
			 if (j!= 0) {do {
			
			c+=A[i1][j1];
			c1--;
			i1++; 
			j1++;
			}
			while (c1!=0);
			cout<<c<<endl;
		}
	}
	s=M;
	j=0;
	for (i = 1; i<M; i++){
			c=0;
			s--;
			c1=s;
			i1=i;
			j1=j;
			 do {
			
			c+=A[i1][j1];
			c1--;
			i1++; 
			j1++;
			}
			while (c1!=0);
			cout<<c<<endl;
		}	
}


